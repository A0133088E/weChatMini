.flex-container{
  display: flex;
  justify-content: space-between;
  height: 60px;
  cursor: pointer;
}
.flex-container view:nth-child(1){
  width: 20%;
}
.flex-container view:nth-child(4){
  width: 40%;
}
.products-container{
  margin: 2rpx 0;
  overflow: scroll;
}
.products-container .flex-container{
    /* background-color: aquamarine; */
}

.product-item{
  border: 1px solid #f8f8f8;
  background-color: #f8f8f8;
  margin: 8px;
}

.btn-section{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
  padding: 12px;
}

.btn-item{
  width: calc(50% - 14px);
  margin-bottom: 24rpx;
  border: 1px solid #44b549;
  padding: 6px;
}